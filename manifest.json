{
  "manifest_version": 2,
  "name": "Tureng Translate",
  "short_name": "tt",
  "version": "0.2",
  "description": "Translate words and phrases by means of scraping Tureng",
  "icons": {
    "48": "icons/tt-48.png",
    "96": "icons/tt-96.png"
  },
  "browser_action": {
    "default_icon": "icons/tt-32.png",
    "default_title": "Tureng Translate",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Open popup"
    },
    "translate-in-popup": {
      "suggested_key": {
        "default": "Ctrl+Space"
      },
      "description": "Translate selected text in popup"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "berkayydinc@gmail.com"
    }
  }
}
